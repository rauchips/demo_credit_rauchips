{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "pretty": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "rootDir": "./src",
    "outDir": "./build",
    "strict": true
  },
  "exclude": ["node_modules"],
  "include": ["./src"],
  "ts-node": { "files": true }
}